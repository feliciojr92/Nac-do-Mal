<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainSobreActivity">

    <Button
            android:text="Limpar Estatísticas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Limpar" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="50dp"/>
    <TextView
            android:text="Desenvolvido por Felicio Junior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nome" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent" android:textColor="#000000" android:textSize="20sp"
            android:gravity="center"/>
    <TextView
            android:text="Mercado Livre: "
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/texto1"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/nome" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp" android:layout_marginRight="50dp"/>
    <TextView
            android:text="Buscapé: "
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/texto2"
            app:layout_constraintTop_toBottomOf="@+id/texto1" android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"/>
    <TextView
            android:text="eBay: "
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/texto3"
            app:layout_constraintTop_toBottomOf="@+id/texto2" android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"/>
    <TextView
            android:text="Webmotors: "
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/texto4" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/texto3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"/>
    <TextView
            android:text="Magalu: "
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/texto5"
            app:layout_constraintTop_toBottomOf="@+id/texto4" android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"/>
    <TextView
            android:text="Net Shoes: "
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/texto6" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/texto5"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"/>
    <TextView
            android:text="Americanas: "
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/texto7"
            app:layout_constraintTop_toBottomOf="@+id/texto6"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="40dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"/>
    <TextView
            android:text="Submarino: "
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/texto8" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/texto7"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>