<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="horizontal">

    <ImageView android:layout_width="150dp"
               android:layout_height="75dp"
               android:src="@drawable/mercadolivre"
               android:contentDescription="Mercado Livre" android:layout_marginTop="76dp"
               app:layout_constraintTop_toTopOf="parent"
               android:id="@+id/imagem1"
               android:layout_marginEnd="40dp" app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginRight="40dp"/>

    <ImageView android:layout_width="150dp"
               android:layout_height="75dp"
               android:src="@drawable/buscape"
               android:contentDescription="BuscapÃ©"
               app:layout_constraintTop_toTopOf="parent"
               android:id="@+id/imagem2"
               android:layout_marginTop="76dp" app:layout_constraintStart_toStartOf="parent"
               android:layout_marginLeft="40dp" android:layout_marginStart="40dp"/>

    <ImageView android:layout_width="150dp"
               android:layout_height="75dp"
               android:src="@drawable/ebay"
               android:contentDescription="eBay"
               android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@+id/imagem1"
               android:id="@+id/imagem3"
               android:layout_marginEnd="40dp" app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginRight="40dp"/>

    <ImageView android:layout_width="150dp"
               android:layout_height="75dp"
               android:src="@drawable/webmotors"
               android:contentDescription="Webmotors"
               android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@+id/imagem2"
               android:id="@+id/imagem4"
               app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="40dp"
               android:layout_marginStart="40dp"/>

    <ImageView android:layout_width="150dp"
               android:layout_height="75dp"
               android:src="@drawable/magalu"
               android:contentDescription="Magalu"
               android:layout_marginTop="80dp" app:layout_constraintTop_toBottomOf="@+id/imagem3"
               android:id="@+id/imagem5"
               android:layout_marginEnd="40dp" app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginRight="40dp"/>

    <ImageView android:layout_width="150dp"
               android:layout_height="75dp"
               android:src="@drawable/netshoes"
               android:contentDescription="NetShoes"
               android:id="@+id/imagem6"
               android:layout_marginStart="40dp" app:layout_constraintStart_toStartOf="parent"
               android:layout_marginLeft="40dp"
               android:layout_marginTop="80dp" app:layout_constraintTop_toBottomOf="@+id/imagem4"/>

    <ImageView android:layout_width="150dp"
               android:layout_height="75dp"
               android:src="@drawable/americanas"
               android:contentDescription="Americanas"
               android:layout_marginTop="80dp" app:layout_constraintTop_toBottomOf="@+id/imagem5"
               android:id="@+id/imagem7" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp"
               android:layout_marginRight="40dp"/>

    <ImageView android:layout_width="150dp"
               android:layout_height="75dp"
               android:src="@drawable/submarino"
               android:contentDescription="Submarino" android:layout_marginTop="80dp"
               app:layout_constraintTop_toBottomOf="@+id/imagem6"
               android:id="@+id/imagem8"
               app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="40dp"
               android:layout_marginStart="40dp"/>
    <Button
            android:text="Sobre"
            android:layout_width="205dp"
            android:layout_height="65dp"
            android:id="@+id/botaoSobre" android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp" android:layout_marginRight="50dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp" android:textSize="36sp" android:textColor="#050505"/>

</androidx.constraintlayout.widget.ConstraintLayout>